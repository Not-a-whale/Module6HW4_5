@model CRUDEmployeesProject.Models.RegisterModel

<h2>Register</h2>

<a asp-action="Register" aasp-controller="Account">Register</a>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter email</label>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
                <div class="form-group">
            <label asp-for="Password">Confirm password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-outline-success"/>
        </div>
    </div>
</form>